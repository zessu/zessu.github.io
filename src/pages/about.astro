---
import { Image } from "astro:assets";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import boatsWithFriends from "../memories/webp-boatnfriends.webp";
import burgers from "../memories/webp-burgers.webp";
import malindiWater from "../memories/webp-malindiwater.webp";
import marina from "../memories/webp-marina.webp";
import restaurantSeaSide from "../memories/webp-restaurant.webp";
import saltySquid from "../memories/webp-saltysquid.webp";
import seafood from "../memories/webp-seafood.webp";
import seaworld from "../memories/webp-seaworld.webp";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      .mood-board {
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        grid-auto-rows: 150px;
        gap: 16px;
        padding: 16px;
      }
      .mood-board img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition:
          transform 0.3s ease,
          box-shadow 0.3s ease;
      }
      .mood-board img:hover {
        transform: scale(1.4);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        cursor: pointer;
      }

      .mood-board img:nth-child(1) {
        grid-column: 1 / 3;
        grid-row: 1 / 3;
      }
      .mood-board img:nth-child(2) {
        grid-column: 3 / 5;
        grid-row: 1 / 2;
      }
      .mood-board img:nth-child(3) {
        grid-column: 1 / 4;
        grid-row: 3 / 5;
      }
      .mood-board img:nth-child(4) {
        grid-column: 1 / 6;
        grid-row: 5 / 6;
      }
      .mood-board img:nth-child(5) {
        grid-column: 4 / 7;
        grid-row: 2 / 4;
      }
      .mood-board img:nth-child(6) {
        grid-column: 4 / 6;
        grid-row: 5 /;
      }
      .mood-board img:nth-child(7) {
        grid-column: 3 / 4;
        grid-row: 2 / 3;
      }
      .mood-board img:nth-child(8) {
        grid-column: 5 / 7;
        grid-row: 1 / 2;
      }
    </style>
  </head>
  <body>
    <Header />
    <main class="mood-board">
      <Image
        src={boatsWithFriends}
        alt="hanging out with some friends on a boat"
      />
      <Image src={burgers} alt="one hell of a burger" />
      <Image src={malindiWater} alt="fishing at a river delta" />
      <Image src={marina} alt="boats at a marina" />
      <Image
        src={restaurantSeaSide}
        alt="bar and restaurant next to a marina"
      />
      <Image
        src={saltySquid}
        alt="seated at the salty squid enjoying some food and a nice breeze"
      />
      <Image src={seafood} alt="A delicious seafood platter" />
      <Image src={seaworld} alt="Hanging out at sea world after work" />
    </main>
    <Footer />
  </body>
</html>
